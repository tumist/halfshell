{
    "server": {
        "port": 8080,
        "read_timeout": 5,
        "write_timeout": 30,
        "disable_statsd": true
    },
    "sources": {
        "default": {
            "type": "filesystem",
            "directory": "/tmp"
        },
        "blog-post-images": {
            "directory": "/tmp/my-company-blog-post-images"
        },
        "profile-photos": {
            "directory": "/tmp/my-company-profile-photos"
        }
    },
    "processors": {
        "default": {
            "image_compression_quality": 85,
            "maintain_aspect_ratio": true,
            "max_blur_radius_percentage": 0,
            "max_image_height": 0,
            "max_image_width": 1000,
            "grayscale": "disabled"
        },
        "profile-photos": {
            "default_image_width": 120,
            "grayscale": true
        }
    },
    "routes": {
        "^/blog(?P<image_path>/.*)$": {
            "name": "blog-post-images",
            "source": "blog-post-images",
            "processor": "default"
        },
        "^/users(?P<image_path>/.*)$": {
            "name": "profile-photos",
            "source": "profile-photos",
            "processor": "profile-photos"
        }
    }
}
